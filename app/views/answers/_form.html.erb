<%= form_with(model: [@question, @answer]) do |form| %>
  <%= render 'shared/errors', resource: @answer %>
  <p>
    <%= form.label :body %>
    <%= form.text_area :body, size: "60x5", id: :answer_body %>
  </p>
  <p>
    <%= form.label :correct %>
    <%= form.check_box :correct, id: :answer_correct %>
  </p>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
